<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20px"
      android:gravity="center_vertical|center"
      android:text="Click to add your profile picture"
      android:textSize="35px"
      android:textColor="#000000"/>
    <ImageButton
      android:id="@+id/UserImage"
      android:layout_width="450px"
      android:layout_height="450px"
      android:layout_marginLeft="300px"
      android:layout_marginRight="300px"
      android:clickable="true"
      android:onClick="UserPicture_Click"/>
    <EditText
      android:id="@+id/EnterName"
      android:inputType="text"
      android:imeOptions="actionNext"
      android:layout_width="500px"
      android:layout_height="150px"
      android:layout_marginLeft="300px"
      android:layout_marginRight="250px"
      android:hint="Enter your Name"
      android:textColor="#000000"
      android:textSize="40px"/>
    <EditText
      android:id="@+id/EnterMajor"
      android:inputType="textAutoCorrect"
      android:layout_width="500px"
      android:layout_height="150px"
      android:layout_marginLeft="300px"
      android:layout_marginRight="250px"
      android:hint="Enter your Major"
      android:textColor="#000000"
      android:textSize="40px"/>

    <EditText
      android:id="@+id/EnterEmail"
      android:inputType="textEmailAddress"
      android:layout_width="500px"
      android:layout_height="150px"
      android:layout_marginLeft="300px"
      android:layout_marginRight="250px"
      android:hint="Enter your Email"
      android:textColor="#000000"
      android:textSize="40px"/>
    <EditText
      android:id="@+id/EnterPassword"
      android:inputType="textPassword"
      android:layout_width="500px"
      android:layout_height="150px"
      android:layout_marginLeft="300px"
      android:layout_marginRight="250px"
      android:hint="Enter your Password"
      android:textColor="#000000"
      android:textSize="40px"/>
    <EditText
      android:id="@+id/EnterPasswordSecondTime"
      android:inputType="textPassword"
      android:layout_width="500px"
      android:layout_height="150px"
      android:layout_marginLeft="300px"
      android:layout_marginRight="250px"
      android:hint="Reenter your Password"
      android:textColor="#000000"
      android:textSize="40px"/>
  </LinearLayout>
  <Button
      android:id="@+id/CreateNewUser"
      android:layout_width="match_parent"
      android:layout_height="200px"
      android:text="Click to Continue"
      android:textSize="40px"
      android:textColor="#000000"
      android:layout_marginTop="1750px"
      android:clickable="true"
      android:onClick="CreateUser_Click"/>


</RelativeLayout>