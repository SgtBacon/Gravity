<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageButton
      android:id="@+id/UserImage"
      android:layout_width="450px"
      android:layout_height="450px"
      android:layout_marginLeft="300px"
      android:layout_marginRight="300px"/>
  <EditText
      android:id="@+id/EnterName"
      android:inputType="text"
      android:imeOptions="Next"
      android:layout_width="500px"
      android:layout_height="150px"
      android:layout_marginLeft="300px"
      android:layout_marginRight="250px"
      android:layout_marginTop="550px"
      android:text="Enter your Name"
      android:textColor="#000000"
      android:textSize="18"
      />
  <EditText
    android:id="@+id/EnterMajor"
    android:inputType="textAutoCorrect"
    android:layout_width="500px"
    android:layout_height="150px"
    android:layout_marginLeft="300px"
    android:layout_marginRight="250px"
    android:layout_marginTop="650px"
    android:text="Enter your Major"
    android:textColor="#000000"
    android:textSize="18"
  />

  <EditText
    android:id="@+id/EnterEmail"
    android:inputType="textEmailAddress"
    android:layout_width="500px"
    android:layout_height="150px"
    android:layout_marginLeft="300px"
    android:layout_marginRight="250px"
    android:layout_marginTop="750px"
    android:text="Enter your Email"
    android:textColor="#000000"
    android:textSize="18"
  />

</RelativeLayout>
